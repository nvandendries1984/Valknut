<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= process.env.BOT_NAME || 'Discord Bot' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">
                    <i class="fas fa-database"></i> Database Backups
                </h1>
                <p class="text-muted">Download and manage database backups. Backups are automatically created daily at 00:00.</p>
            </div>
        </div>

        <!-- Backups List -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-archive"></i> Available Backups (<span id="backupCount"><%= backups.length %></span>)</h5>
                        <span class="badge bg-info">Retention: Last 7 backups</span>
                    </div>
                    <div class="card-body">
                        <% if (backups.length === 0) { %>
                            <div class="text-center py-5">
                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                <p class="text-muted">No backups available yet. The first automatic backup will be created at 00:00.</p>
                                <p class="text-muted">You can also create a manual backup using the <code>/backup</code> command in Discord.</p>
                            </div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover" id="backupsTable">
                                    <thead>
                                        <tr>
                                            <th><i class="fas fa-file-archive"></i> Filename</th>
                                            <th><i class="fas fa-hdd"></i> Size</th>
                                            <th><i class="fas fa-calendar"></i> Created</th>
                                            <th class="text-end"><i class="fas fa-cog"></i> Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% backups.forEach(function(backup) { %>
                                            <tr data-filename="<%= backup.filename %>">
                                                <td>
                                                    <i class="fas fa-file-archive text-warning me-2"></i>
                                                    <strong><%= backup.filename %></strong>
                                                </td>
                                                <td><%= backup.size %></td>
                                                <td><%= backup.date %></td>
                                                <td class="text-end">
                                                    <a href="/admin/backups/download/<%= backup.filename %>"
                                                       class="btn btn-sm btn-primary me-2"
                                                       download>
                                                        <i class="fas fa-download"></i> Download
                                                    </a>
                                                    <button class="btn btn-sm btn-danger delete-backup-btn"
                                                            data-filename="<%= backup.filename %>">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </button>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Info Card -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card bg-dark">
                    <div class="card-body">
                        <h6 class="card-title"><i class="fas fa-info-circle"></i> Backup Information</h6>
                        <ul class="mb-0">
                            <li><strong>Automatic Backups:</strong> Daily at 00:00 (Europe/Amsterdam timezone)</li>
                            <li><strong>Manual Backups:</strong> Use <code>/backup</code> command in Discord</li>
                            <li><strong>Retention Policy:</strong> Last 7 backups are kept, older ones are automatically deleted</li>
                            <li><strong>Format:</strong> Compressed tar.gz archives</li>
                            <li><strong>Location:</strong> <code>/app/db-backups</code> in container</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="notificationToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <i class="fas fa-info-circle me-2"></i>
                <strong class="me-auto">Notification</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body"></div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Delete backup
        document.querySelectorAll('.delete-backup-btn').forEach(btn => {
            btn.addEventListener('click', async function() {
                const filename = this.getAttribute('data-filename');

                if (!confirm(`Are you sure you want to delete ${filename}?\n\nThis action cannot be undone.`)) {
                    return;
                }

                try {
                    this.disabled = true;
                    this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Deleting...';

                    const response = await fetch(`/admin/backups/${filename}`, {
                        method: 'DELETE'
                    });

                    const data = await response.json();

                    if (response.ok) {
                        showToast('Backup deleted successfully', 'success');

                        // Remove row from table
                        const row = document.querySelector(`tr[data-filename="${filename}"]`);
                        if (row) {
                            row.remove();

                            // Update count
                            const count = document.querySelectorAll('#backupsTable tbody tr').length;
                            document.getElementById('backupCount').textContent = count;

                            // Show empty message if no backups left
                            if (count === 0) {
                                setTimeout(() => location.reload(), 1000);
                            }
                        }
                    } else {
                        showToast(data.error || 'Error deleting backup', 'danger');
                        this.disabled = false;
                        this.innerHTML = '<i class="fas fa-trash"></i> Delete';
                    }
                } catch (error) {
                    console.error('Delete backup error:', error);
                    showToast('Error deleting backup', 'danger');
                    this.disabled = false;
                    this.innerHTML = '<i class="fas fa-trash"></i> Delete';
                }
            });
        });

        function showToast(message, type = 'info') {
            const toast = document.getElementById('notificationToast');
            const toastBody = toast.querySelector('.toast-body');
            const toastHeader = toast.querySelector('.toast-header');

            // Set icon based on type
            let icon = 'fa-info-circle';
            if (type === 'success') icon = 'fa-check-circle';
            else if (type === 'danger') icon = 'fa-exclamation-circle';
            else if (type === 'warning') icon = 'fa-exclamation-triangle';

            toastHeader.querySelector('i').className = `fas ${icon} me-2`;
            toastBody.textContent = message;

            // Add color based on type
            toast.classList.remove('text-bg-info', 'text-bg-success', 'text-bg-danger', 'text-bg-warning');
            if (type !== 'info') {
                toast.classList.add(`text-bg-${type}`);
            }

            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
        }
    </script>
</body>
</html>
