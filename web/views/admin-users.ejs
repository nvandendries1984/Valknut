<!DOCTYPE html>
<html lang="<%= currentLang %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= process.env.BOT_NAME || 'Discord Bot' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar') %>
    <%- include('partials/2fa-alert') %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">
                    <i class="fas fa-user-shield"></i> <%= __('admin.title') %>
                </h1>
                <p class="text-muted"><%= __('admin.description') %></p>
            </div>
        </div>

        <!-- Add User Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card bg-dark text-white border-secondary">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-user-plus"></i> <%= __('admin.addUser') %></h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="searchUsername" class="form-label">Search Discord Username</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="searchUsername" placeholder="Enter username to search...">
                                <button class="btn btn-primary" type="button" id="searchBtn">
                                    <i class="fas fa-search"></i> Search
                                </button>
                            </div>
                            <small class="form-text text-muted">Search for users in servers where the bot is present.</small>
                        </div>

                        <!-- Search Results -->
                        <div id="searchResults" class="d-none">
                            <h6 class="mb-3">Search Results:</h6>
                            <div id="userList" class="list-group mb-3"></div>
                        </div>

                        <!-- Add User Form (hidden by default) -->
                        <div id="addUserForm" class="d-none">
                            <hr>
                            <h6 class="mb-3">Selected User:</h6>
                            <div class="d-flex align-items-center mb-3">
                                <img id="selectedAvatar" src="" alt="Avatar" class="rounded-circle me-3" width="50" height="50">
                                <div>
                                    <strong id="selectedUsername"></strong>
                                    <br>
                                    <small class="text-muted">ID: <span id="selectedUserId"></span></small>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="reason" class="form-label">Reason (Optional)</label>
                                <textarea class="form-control" id="reason" rows="2" placeholder="Why is this user being granted access?"></textarea>
                            </div>
                            <button class="btn btn-success" id="confirmAddBtn">
                                <i class="fas fa-check"></i> Grant Access
                            </button>
                            <button class="btn btn-secondary" id="cancelAddBtn">
                                <i class="fas fa-times"></i> Cancel
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Current Allowed Users -->
        <div class="row">
            <div class="col-12">
                <div class="card bg-dark text-white border-secondary">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-users"></i> Allowed Users (<span id="userCount"><%= allowedUsers.length %></span>)</h5>
                    </div>
                    <div class="card-body">
                        <% if (allowedUsers.length === 0) { %>
                            <p class="text-muted text-center py-4">No users in the whitelist yet. Add users above to grant them access.</p>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover" id="allowedUsersTable">
                                    <thead>
                                        <tr>
                                            <th>User</th>
                                            <th>Discord ID</th>
                                            <th>Added By</th>
                                            <th>Added Date</th>
                                            <th>Reason</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% allowedUsers.forEach(function(allowedUser) { %>
                                            <tr data-user-id="<%= allowedUser.userId %>">
                                                <td>
                                                    <strong><%= allowedUser.username %></strong><% if (allowedUser.discriminator && allowedUser.discriminator !== '0') { %>#<%= allowedUser.discriminator %><% } %>
                                                </td>
                                                <td><code><%= allowedUser.userId %></code></td>
                                                <td><%= allowedUser.addedBy %></td>
                                                <td><%= new Date(allowedUser.addedAt).toLocaleDateString() %></td>
                                                <td><%= allowedUser.reason || '-' %></td>
                                                <td>
                                                    <button class="btn btn-sm btn-danger remove-user-btn" data-user-id="<%= allowedUser.userId %>" data-username="<%= allowedUser.username %>">
                                                        <i class="fas fa-trash"></i> Remove
                                                    </button>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="notificationToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <i class="fas fa-info-circle me-2"></i>
                <strong class="me-auto">Notification</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body"></div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let selectedUser = null;

        // Search users
        document.getElementById('searchBtn').addEventListener('click', async () => {
            const username = document.getElementById('searchUsername').value.trim();
            if (!username) {
                showToast('Please enter a username to search', 'warning');
                return;
            }

            try {
                document.getElementById('searchBtn').disabled = true;
                document.getElementById('searchBtn').innerHTML = '<i class="fas fa-spinner fa-spin"></i> Searching...';

                const response = await fetch('/admin/users/search', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ username })
                });

                const data = await response.json();

                if (data.users && data.users.length > 0) {
                    displaySearchResults(data.users);
                } else {
                    showToast('No users found with that username', 'info');
                    document.getElementById('searchResults').classList.add('d-none');
                }
            } catch (error) {
                console.error('Search error:', error);
                showToast('Error searching users', 'danger');
            } finally {
                document.getElementById('searchBtn').disabled = false;
                document.getElementById('searchBtn').innerHTML = '<i class="fas fa-search"></i> Search';
            }
        });

        // Allow Enter key to search
        document.getElementById('searchUsername').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                document.getElementById('searchBtn').click();
            }
        });

        function displaySearchResults(users) {
            const userList = document.getElementById('userList');
            userList.innerHTML = '';

            users.forEach(user => {
                const item = document.createElement('button');
                item.className = 'list-group-item list-group-item-action d-flex align-items-center';
                item.innerHTML = `
                    <img src="${user.avatar}" alt="Avatar" class="rounded-circle me-3" width="40" height="40">
                    <div class="flex-grow-1">
                        <strong>${user.username}</strong>${user.discriminator !== '0' ? '#' + user.discriminator : ''}
                        <br>
                        <small class="text-muted">ID: ${user.id}</small>
                    </div>
                    <i class="fas fa-chevron-right"></i>
                `;
                item.addEventListener('click', () => selectUser(user));
                userList.appendChild(item);
            });

            document.getElementById('searchResults').classList.remove('d-none');
        }

        function selectUser(user) {
            selectedUser = user;
            document.getElementById('selectedAvatar').src = user.avatar;
            document.getElementById('selectedUsername').textContent = user.displayName;
            document.getElementById('selectedUserId').textContent = user.id;
            document.getElementById('addUserForm').classList.remove('d-none');
            document.getElementById('searchResults').classList.add('d-none');
        }

        // Confirm add user
        document.getElementById('confirmAddBtn').addEventListener('click', async () => {
            if (!selectedUser) return;

            const reason = document.getElementById('reason').value.trim();

            try {
                document.getElementById('confirmAddBtn').disabled = true;

                const response = await fetch('/admin/users', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        userId: selectedUser.id,
                        username: selectedUser.username,
                        discriminator: selectedUser.discriminator,
                        reason: reason || undefined
                    })
                });

                const data = await response.json();

                if (response.ok) {
                    showToast('User added successfully', 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showToast(data.error || 'Error adding user', 'danger');
                    document.getElementById('confirmAddBtn').disabled = false;
                }
            } catch (error) {
                console.error('Add user error:', error);
                showToast('Error adding user', 'danger');
                document.getElementById('confirmAddBtn').disabled = false;
            }
        });

        // Cancel add
        document.getElementById('cancelAddBtn').addEventListener('click', () => {
            selectedUser = null;
            document.getElementById('addUserForm').classList.add('d-none');
            document.getElementById('reason').value = '';
            document.getElementById('searchResults').classList.remove('d-none');
        });

        // Remove user
        document.querySelectorAll('.remove-user-btn').forEach(btn => {
            btn.addEventListener('click', async function() {
                const userId = this.getAttribute('data-user-id');
                const username = this.getAttribute('data-username');

                if (!confirm(`Are you sure you want to remove ${username} from the allowed users list?`)) {
                    return;
                }

                try {
                    this.disabled = true;
                    this.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';

                    const response = await fetch(`/admin/users/${userId}`, {
                        method: 'DELETE'
                    });

                    const data = await response.json();

                    if (response.ok) {
                        showToast('User removed successfully', 'success');
                        // Remove row from table
                        const row = document.querySelector(`tr[data-user-id="${userId}"]`);
                        if (row) {
                            row.remove();
                            // Update count
                            const count = document.querySelectorAll('#allowedUsersTable tbody tr').length;
                            document.getElementById('userCount').textContent = count;

                            // Show empty message if no users left
                            if (count === 0) {
                                location.reload();
                            }
                        }
                    } else {
                        showToast(data.error || 'Error removing user', 'danger');
                        this.disabled = false;
                        this.innerHTML = '<i class="fas fa-trash"></i> Remove';
                    }
                } catch (error) {
                    console.error('Remove user error:', error);
                    showToast('Error removing user', 'danger');
                    this.disabled = false;
                    this.innerHTML = '<i class="fas fa-trash"></i> Remove';
                }
            });
        });

        function showToast(message, type = 'info') {
            const toast = document.getElementById('notificationToast');
            const toastBody = toast.querySelector('.toast-body');
            const toastHeader = toast.querySelector('.toast-header');

            // Set icon based on type
            let icon = 'fa-info-circle';
            if (type === 'success') icon = 'fa-check-circle';
            else if (type === 'danger') icon = 'fa-exclamation-circle';
            else if (type === 'warning') icon = 'fa-exclamation-triangle';

            toastHeader.querySelector('i').className = `fas ${icon} me-2`;
            toastBody.textContent = message;

            // Add color based on type
            toast.classList.remove('text-bg-info', 'text-bg-success', 'text-bg-danger', 'text-bg-warning');
            if (type !== 'info') {
                toast.classList.add(`text-bg-${type}`);
            }

            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
        }
    </script>
</body>
</html>
