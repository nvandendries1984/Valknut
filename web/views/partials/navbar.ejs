<nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom border-secondary">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center" href="/">
            <% if (typeof botUser !== 'undefined' && botUser && botUser.avatar) { %>
                <img src="https://cdn.discordapp.com/avatars/<%= botUser.id %>/<%= botUser.avatar %>.png?size=64"
                     alt="<%= botUser.username %>" class="rounded-circle me-2" width="32" height="32">
            <% } else { %>
                <i class="fas fa-shield-alt me-2"></i>
            <% } %>
            Valknut
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto align-items-center">
                <% if (typeof user !== 'undefined' && user) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">
                            <i class="fas fa-tachometer-alt me-1"></i>
                            <%= __('nav.dashboard') %>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard/help">
                            <i class="fas fa-question-circle me-1"></i>
                            <%= __('nav.help') || 'Help' %>
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                            <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png"
                                 alt="Avatar" class="rounded-circle me-2" width="32" height="32">
                            <%= user.username %>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <% if (process.env.OWNER_ID === user.id) { %>
                                <li><a class="dropdown-item" href="/admin/users">
                                    <i class="fas fa-user-shield me-2"></i><%= __('nav.manageUsers') %>
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                            <% } %>
                            <li><a class="dropdown-item" href="/auth/2fa/status">
                                <i class="fas fa-shield-alt me-2"></i><%= __('nav.twoFaSettings') %>
                            </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/auth/logout">
                                <i class="fas fa-sign-out-alt me-2"></i><%= __('nav.logout') %>
                            </a></li>
                        </ul>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a href="/auth/login" class="btn btn-primary">
                            <i class="fab fa-discord me-1"></i>
                            <%= __('nav.loginWithDiscord') %>
                        </a>
                    </li>
                <% } %>

                <!-- Language Switcher -->
                <li class="nav-item dropdown ms-2">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-globe me-1"></i>
                        <% if (currentLang === 'nl') { %>
                            <img src="https://flagcdn.com/16x12/nl.png" alt="Nederlands" class="me-1">
                            NL
                        <% } else { %>
                            <img src="https://flagcdn.com/16x12/gb.png" alt="English" class="me-1">
                            EN
                        <% } %>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item <%= currentLang === 'nl' ? 'active' : '' %>" href="/language/nl">
                                <img src="https://flagcdn.com/16x12/nl.png" alt="Nederlands" class="me-2">
                                Nederlands
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item <%= currentLang === 'en' ? 'active' : '' %>" href="/language/en">
                                <img src="https://flagcdn.com/16x12/gb.png" alt="English" class="me-2">
                                English
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>
